<ul class='nav nav-tabs'>

  <li class="icon index_collection_link <%= index_active? %>">
    <%= link_to fa_icon('th-list', text: t('license.navbar.list')), licenses_path %>
  </li>

  <% if admin? %>
    <li class="icon new_collection_link <%= new_active? %>">
      <%= link_to fa_icon('plus', text: t('license.navbar.add_new')), new_license_path %>
    </li>
  <% end %>

  <% if show_action? %>
    <li class="icon new_collection_link <%= show_active? %>">
      <%= link_to fa_icon('eye', text: t('common.view')), '#' %>
    </li>
  <% end %>

  <% if edit_action? %>
    <li class="icon new_collection_link <%= edit_active? %>">
      <%= link_to fa_icon('pencil', text: t('common.edit')), '#' %>
    </li>
  <% end %>

  <% if register_action? %>
    <li class="icon new_collection_link <%= register_active? %>">
      <%= link_to fa_icon('unlock', text: t('common.register')), '#' %>
    </li>
  <% end %>

  <% if admin? && index_action? %>

    <li class="dropdown right">
      <%= link_to t('license.navbar.selected_items'), '#', class: 'dropdown-toggle', :'data-toggle' => 'dropdown' %>
      <ul class="dropdown-menu dropdown-menu-right">
        <li>
          <%= link_to t('license.navbar.deleted_items'), batch_destroy_licenses_path, class: 'batch-destroy' %>
        </li>
      </ul>
    </li>

  <% end %>

</ul>
