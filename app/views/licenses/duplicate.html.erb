<div class="page-header">
  <h1><%= t('license.duplicate') %></h1>
</div>

<%= render partial: 'nav_tabs' %>

<%= form_with(model: @license, local: true, class: 'form-horizontal denser') do |form| %>

  <div class="fieldset">

    <% if @license.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@license.errors.count, 'error') %>
          <%= t('license.errors.prohibited') %>
        </h2>

        <ul>
          <% @license.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group control-group">
      <%= form.label :id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= text_field_tag 'license[id]', nil, required: true, class: 'form-control', disabled: true %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :client_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.select :client_id, options_for_clients, {}, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :app_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.select :app_id, options_for_apps, {}, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :version_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.select :version_id, options_for_versions, {}, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :plan_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.select :plan_id, options_for_plans, {}, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :license_type_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.select :license_type_id, options_for_license_types, {}, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :license_status_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.select :license_status_id, options_for_license_statuses, {}, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :order_number, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.text_field :order_number, required: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :end_client_name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.text_area :end_client_name, required: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :installation_address, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.text_area :installation_address, required: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :description, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.text_area :description, required: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :quantity, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= number_field_tag :quantity, 1, required: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :origin_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= number_field_tag 'license[origin_id]', @license.id, required: true, class: 'form-control', readonly: true %>
      </div>
    </div>

    <% if super_admin? %>
      <div class="form-group control-group">
        <%= form.label :hidden, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10 controls">
          <%= form.select :hidden, options_for_hidden, {}, class: 'form-control' %>
        </div>
      </div>

      <%= hidden_field_tag :'license[hidden_at]', @license.hidden_at %>
    <% end %>

    <div class="form-group control-group">
      <div class='col-sm-2'></div>
      <div class='col-sm-8'>
        <%= form.button :submit, class: 'btn btn-primary btn-save' do %>
          <%= fa_icon('check', text: t('common.save')) %>
        <% end %>

        <%= link_to fa_icon('times', text: t('common.cancel')), licenses_path, class: 'btn btn-secondary' %>
      </div>
    </div>

  </div>

<% end %>
