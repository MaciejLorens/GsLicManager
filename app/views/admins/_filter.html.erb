<div class='well'>

  <%= form_tag(admins_path, method: :get, class: 'filter-form') do %>

    <div class="filter-field form-inline">

      <%= hidden_field_tag :s_field, params[:s_field] %>
      <%= hidden_field_tag :s_order, params[:s_order] %>

      <%= text_field_tag :f_email,
                         params[:f_email],
                         placeholder: t('activerecord.attributes.user.email'),
                         class: 'form-control filter' %>

      <%= text_field_tag :f_first_name,
                         params[:f_first_name],
                         placeholder: t('activerecord.attributes.user.first_name'),
                         class: 'form-control filter' %>

      <%= text_field_tag :f_last_name,
                         params[:f_last_name],
                         placeholder: t('activerecord.attributes.user.last_name'),
                         class: 'form-control filter' %>

      <%= link_to fa_icon('times'), admins_path, class: 'btn btn-info pull-right' %>

      <%= button_tag :submit, class: 'btn btn-primary pull-right' do %>
        <%= fa_icon('retweet', text: t('common.refresh')) %>
      <% end %>

    </div>

  <% end %>

</div>
