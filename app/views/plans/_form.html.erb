<%= form_with(model: plan, local: true, class: 'form-horizontal denser') do |form| %>

  <div class="fieldset">

    <% if plan.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(plan.errors.count, 'error') %>
          <%= t('plan.errors.prohibited') %>
        </h2>

        <ul>
        <% plan.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group control-group">
      <%= form.label :id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.text_field :id, class: 'form-control', disabled: true %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :val_pl, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.text_field :val_pl, required: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group control-group">
      <%= form.label :val_en, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= form.text_field :val_en, required: true, class: 'form-control' %>
      </div>
    </div>

    <% if super_admin? %>
      <div class="form-group control-group">
        <%= form.label :hidden, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10 controls">
          <%= form.select :hidden, options_for_hidden, {}, class: 'form-control' %>
        </div>
      </div>

      <%= hidden_field_tag :'plan[hidden_at]', plan.hidden_at %>

    <% end %>

    <div class="form-group control-group">
      <div class='col-sm-2'></div>
      <div class='col-sm-8'>
        <%= form.button :submit, class: 'btn btn-primary btn-save' do %>
          <%= fa_icon('check', text: t('common.save')) %>
        <% end %>

        <%= link_to fa_icon('times', text: t('common.cancel')), plans_path, class: 'btn btn-secondary' %>
      </div>
    </div>

  </div>

<% end %>
